<h1>Portfolio: <%= @portfolio.name %> </h1>

<%= render 'shared/trades', :trades => @trades %>
<h2><%= @portfolio.name %>'s position </h2>

<table id="positions" class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Security Name</th>
    <th>Security ID</th>
    <th>Security Market</th>
    <th>Position</th>
    <th>Cost</th>
  </tr>
  </thead>
  <tbody>
  <% @positions.each do |sec, value| %>
    <tr>
      <td><%= link_to(sec.name, sec) %></td>
      <td><%= sec.sid %></td>
      <td><%= sec.market %></td>
      <td><%= value[:position] %></td>
      <td><%= value[:cost].round(4) %></td>
    </tr>
  <% end %>
  </tbody>
</table>